<?xml version='1.0' encoding='windows-1252'?>

<!--

  In the future we should use WiX for the Windows installer.
  However, wixl (part of msitools) doesn't yet support all the necessary parts.
  
  -->

<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'>
  <Product Name='Wrap' Id='655075A2-2D07-4B45-92FC-D03EABA6BACE' UpgradeCode='734EAF27-1939-4ACE-A716-C71462D42798'
    Language='1033' Codepage='1252' Version='0.1.3' Manufacturer='The Wraparound Contributers'> <!-- Platform="x64" should be added -->

    <Package Id='*' Keywords='Installer' Description="Wrap Installer"
      Manufacturer='The Wraparound Contributers' InstallerVersion='300' Languages='1033'
      Compressed='yes' SummaryCodepage='1252' />

    <Media Id='1' Cabinet='wrap.cab' EmbedCab='yes' />

    <Icon Id="wrap.ico" SourceFile="assets/wrap.ico" />
    <Property Id="ARPPRODUCTICON" Value="wrap.ico" />

    <Directory Id='TARGETDIR' Name='SourceDir'>
      <Directory Id='ProgramFilesFolder' Name='PFiles'>
        <Directory Id='Wraparound' Name='Wraparound'>
          <Directory Id='INSTALLDIR' Name='wrap'>

            <Component Id='MainExecutable' Guid='05AE72D7-8C92-4730-B733-87A7122A9A53'>
              <File Id='WrapEXE' Name='wrap.exe' DiskId='1' Source='build/windows/wrap.exe' KeyPath='yes'/>
            </Component>

            <!-- <Component Id="SetPath" Guid='85C8F74A-439D-4B36-913A-E0BD75781B81'>
              <Environment Id="Path" Name="PATH" Value="[INSTALLDIR]" Permanent="no" Part="last" Action="set" System="yes" />
            </Component> -->

          </Directory>
        </Directory>
      </Directory>
    </Directory>

    <Feature Id='Install' Level="1">
      <ComponentRef Id='MainExecutable' />
      <!-- <ComponentRef Id='SetPath' /> -->
    </Feature>

  </Product>
</Wix>
